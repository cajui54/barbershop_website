generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Scheduling {
  id String @id @default(cuid())
  data DateTime
  dayWeek String
  time String
  service String
  user User[]
}
model User {
  id String @id @default(cuid())
  name String
  email String @unique
  image String
  bloqued Boolean
  createdAt DateTime @default(now())
  scheduleId String
  schedule Scheduling @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
}

model Service {
  id String @id @default(cuid())
  type String @unique
  price Decimal
}
model Time {
  id String @id @default(cuid())
  time String @unique
}

